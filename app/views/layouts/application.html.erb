<!DOCTYPE html>
<html>
  <head>
    <title>Chatons</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag 'bootstrap', media: 'all', 'data-turbolinks-track': 'reload'%>

    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'popper.min', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'bootstrap.min', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'jquery-3.4.1.slim.min', 'data-turbolinks-track': 'reload' %>
    <script src="https://kit.fontawesome.com/f56b9447bd.js" crossorigin="anonymous"></script>


  </head>

  <body>
<!-- Start of nav bar-->
    <nav class="navbar navbar-expand-lg navbar-dark bg-success">
      <%= link_to " Whisker", root_path, class:"navbar-brand" %>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarTogglerDemo02" aria-controls="navbarTogglerDemo02" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarTogglerDemo02">
        <ul class="navbar-nav mr-auto mt-2 mt-lg-0">
          <% if user_signed_in? %>
            <li class="nav-item">
              <%= link_to "Cart", cart_path(current_user.id), class:"nav-link"%>
            </li>
          <% else %>
            <li class="nav-item">
              <%= link_to "Cart", new_user_session_path, class:"nav-link"%>
            </li>
          <% end %>
        </ul>
        <ul class="navbar-nav">
          <% if user_signed_in? %>
            <li class="nav-item dropdown">
              <button type="button" class="btn btn-success dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                <%= current_user %>
              </button>
              <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
                <%= link_to "Editer profil", edit_user_registration_path, class:"dropdown-item" %>
                <div class="dropdown-divider"></div>
                <%= link_to "Se dÃ©connecter", destroy_user_session_path, class:"dropdown-item", method: :delete %>
              </div>
            </li>
          <% else %>
            <li class="btn-group">
              <button type="button" class="btn btn-success dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                S'inscrire / Se connecter
              </button>
              <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
                <%= link_to "Inscription", new_user_registration_path, class:"dropdown-item" %>
                <div class="dropdown-divider"></div>
                <%= link_to "Connexion", new_user_session_path, class:"dropdown-item" %>
              </div>
            </li>
          <% end %>
        </ul>
      </div>
    </nav>    
<!-- End of nav bar-->

<!-- Flash -->
    <% flash.each do |key, value| %>
      <% if key == "error" %>
        <div class="alert alert-light alert-dismissible fade show" role="alert">
          <%= content_tag :span, value, class: "flash #{key}" %>
          <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
      <% else %>
        <div class="alert alert-light alert-dismissible fade show" role="alert">
          <%= content_tag :span, value, class: "flash #{key}" %>
          <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
      <% end %>
    <% end %>
<!-- End of Flash -->

<!-- Start of main-->
    <main role="main" class="flex-shrink-0">
      <div class="container">
            <%= yield %>
      </div>
    </main>
<!-- End of main-->

<!-- Start of footer-->
<!-- End of footer-->

  </body>
</html>

