<main class="container">

    <h1 class="text-center"> Profil sur votre profil <%=@admin_user.first_name%> <%=@admin_user.last_name%></h1>
    <div class="d-flex flex-row my-5">
        <div class="mx-3">
        <%# <%if @admin_user.avatar.attached?%> 
        <%#     <%= image_tag @admin_user.avatar.variant(resize: '200x200'), alt: 'avatar' %>
        <%#  <%else%>
        <%#     <%= image_tag("default.jpg")%>
        <%#  <%end%> 
        </div>


        <div class="mx-3">
        <p><strong>First name : </strong><%= @admin_user.first_name %></p>
        <p><strong>Last name : </strong><%= @admin_user.last_name %></p>
        <p><strong>Email : </strong><%= @admin_user.email %></p>
        <p><strong>Birthdate : </strong><%= @admin_user.birthdate %></p>
        <p><strong>Adresse : </strong><%= @admin_user.adress %></p>
        <p><strong>Description : </strong><%= @admin_user.description %></p>
        </div>
    </div>

<div class="text-center">
  <%= link_to 'Edit', edit_admin_user_path(@admin_user), class:"btn btn-success" %> |
  <%= link_to 'Back', admin_users_path, class:"btn btn-primary" %>
</div>

<br>
<h2> Historique de vos commandes </h2>

    <% current_user.orders.each_with_index do |order, i| %>

      <b> Commande du <%= order.created_at.strftime('%d/%m/%Y à %H:%M') %> d'un montant de <%= order.total %>€</b> 
      <%= link_to 'Show', admin_order_path(order.id) %>
      <%= link_to 'Edit', edit_admin_order_path(order.id) %>
      <%= link_to 'Destroy', admin_order_path(order.id), method: :delete, data: { confirm: 'Are you sure?' } %>
      <p> Contenu : </p>
      <ul>
      <% order.items.each do |item| %>
        <li><%= item.title %></li> 
      <% end %>
      </ul>
    <% end %>

</main>

