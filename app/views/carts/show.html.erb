<h1>Votre panier</h1>
<div class="card border-light mb-3 " >
  <div class="card-header text-white bg-dark">
    Votre panier:
  </div>
  <ul class="list-group list-group-flush border-right-0">
    <% @in_cart.each do |item| %>
      <li class="list-group-item">
        <div class="row">
            <div class="col-md-2">
              <%= image_tag item.picture, width: "150"%>
            </div>
            <div class="col-md-9">
                <%= item.title %><br>
              <strong>
                <%= item.price %>€
              </strong>
            </div>
            <div class="col-md-1">
              <%= link_to "<i class='fa fa-trash'></i>".html_safe, cart_path(item), method: "DELETE",class: "btn btn-danger" %>
            </div>
        </div>
      </li>
    <% end %>
      <div class="card-footer">
        <div class="row float-right">
          <h4 class="bold mr-3">Total: <%= @total%>€</h4>
          <button type="button" class="btn btn-primary">Pay with strip</button>
        </div>
      </div>    
  </ul>
</div>
