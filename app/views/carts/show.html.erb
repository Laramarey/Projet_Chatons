<h1>Votre panier</h1>
<div class="card border-light mb-3 " >
  <div class="card-header text-white bg-dark">
    Votre panier:
  </div>
  <ul class="list-group list-group-flush border-right-0">
    <% @cart.in_cart.each do |item| %>
      <li class="list-group-item" id="<%= item.id%>">
        <div class="row">
            <div class="col-md-2">
              <%= image_tag item.picture, width: "150"%>
            </div>
            <div class="col-md-9">
                <%= item.title %><br>
              <strong>
                <%= item.price %>€
              </strong>
              <br>
              <strong>
                Quantité: <%= item.join_cart_items.find_by(cart_id: current_user.cart.id).quantity%> X 
              </strong>
            </div>
            <div class="col-md-1">
              <%= link_to "<i class='fa fa-trash'></i>".html_safe, cart_path(item), method: "DELETE",class: "btn btn-danger", remote: true %>
            </div>
        </div>
      </li>
    <% end %>
      <div class="card-footer  text-right">
      <% if user_signed_in? %>
  <!-- STRIPE -->
      <div id="stripe">
        <%= render 'stripe'%>
      </div>
  <!-- End of STRIPE -->        
      <% else %>
          <%= link_to "Payer", new_user_session_path, class:"btn btn-outline-primary btn-lg" %> 
      <% end %>

      </div>    
  </ul>
</div>
