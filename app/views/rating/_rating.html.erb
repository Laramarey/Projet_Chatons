<table class="table ">
  <thead class="border-0">
    <tr class="border-0">
      <th scope="col" width="15%" class="border-0"></th>
      <th scope="col" class="border-0"></th>
    </tr>
  </thead>
  <tbody>
    <tr class="border-0">
      <th scope="row">5 Etoiles: <%= @item.item_star(5)%></th>
      <td>
      <div class="progress" style="height: 20px;" class="border-0">
        <div class="progress-bar progress-bar-striped bg-success" role="progressbar" style="width: <%= @item.percent(5)%>%;" aria-valuenow="<%= @item.item_star(5)%>" aria-valuemin="0" aria-valuemax="<%= @item.item_star%>"></div>
      </div>
      </td>

    </tr>
    <tr class="border-0">
      <th scope="row">4 Etoiles: <%= @item.item_star(4)%></th>
      <td >
      <div class="progress" style="height: 20px;">
        <div class="progress-bar progress-bar-striped bg-info" role="progressbar" style="width: <%= @item.percent(4)%>%;" aria-valuenow="<%= @item.item_star(4)%>" aria-valuemin="0" aria-valuemax="<%= @item.item_star%>"></div>
      </div>
      </td>

    </tr>
    <tr>
      <th scope="row">3 Etoiles: <%= @item.item_star(3)%></th>
      <td>
      <div class="progress" style="height: 20px;">
        <div class="progress-bar progress-bar-striped" role="progressbar" style="width: <%= @item.percent(3)%>%;" aria-valuenow="<%= @item.item_star(3)%>" aria-valuemin="0" aria-valuemax="<%= @item.item_star%>"></div>
      </div>
      </td>

    </tr>
        <tr>
      <th scope="row">2 Etoiles: <%= @item.item_star(2)%></th>
      <td>
      <div class="progress" style="height: 20px;">
        <div class="progress-bar progress-bar-striped bg-warning  " role="progressbar" style="width: <%= @item.percent(2)%>%;" aria-valuenow="<%= @item.item_star(2)%>" aria-valuemin="0" aria-valuemax="<%= @item.item_star%>"></div>
      </div>
      </td>

    </tr>
        <tr>
      <th scope="row">1 Etoile: <%= @item.item_star(1)%></th>
      <td>
        <div class="progress" style="height: 20px;">
        <div class="progress-bar progress-bar-striped bg-danger" role="progressbar" style="width:  <%= @item.percent(1)%>%;" aria-valuenow="<%= @item.item_star(1)%>" aria-valuemin="0" aria-valuemax="<%= @item.item_star%>"></div>
      </div>
      </td>

    </tr>
  </tbody>
</table>
