<p id="notice"><%= notice %></p>

<h1>Admin Orders</h1>

<%= link_to 'New Admin Order',  admin_orders_path, class:"btn btn-primary" %>


<br>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @admin_orders.each do |admin_order| %>
      <tr>
        <td>Ref : <%= admin_order.id %> </td>
        <td> <%= admin_order.user.first_name + " " + admin_order.user.last_name %> </td>
        <td> Commande réalisée le <%= admin_order.created_at.strftime('%d/%m/%Y à %H:%M') %> </td>
        <td> Montant : <%= admin_order.total  %></td>
        <td><%= link_to 'Show', admin_order_path(admin_order) %></td>
        <td><%= link_to 'Edit', edit_admin_order_path(admin_order) %></td>
        <td><%= link_to 'Destroy', admin_order_path(admin_order), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

